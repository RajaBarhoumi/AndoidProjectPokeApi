<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFB0F4"
    tools:context=".ForgetPasswordActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="49dp"
        android:text="Please enter your registered email to receive password reset link"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#A128E3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="173dp"
        android:textColor="#9036C1"
        android:text="Email*"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPwdResetEmail"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="227dp"
        android:ems="10"
        android:hint="Enter your registred email"
        android:inputType="textEmailAddress" />


    <Button
        android:textColor="#FBE9FB"
        android:background="#D290F6"
        android:id="@+id/buttonPwdReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="RESET PASSWORD" />
</RelativeLayout>